<main class="home">
  <% if @sandbox_component == "ig_menu" %>
    <section style="display: grid; gap: 1rem; justify-items: start;">
      <%= render "shared/ig_menu",
        items: [
          { label: "Item 1", intent: "item_1", kind: "action" },
          { label: "Item 2", intent: "item_2", kind: "action" },
          { label: "Item 3", intent: "item_3", kind: "action" }
        ],
        width: "16rem" %>

      <%= render "shared/ig_menu",
        items: [
          { label: "Item 1", intent: "item_1", kind: "action" },
          { label: "Item 2", intent: "item_2", kind: "action" },
          { label: "Item 3", intent: "item_3", kind: "action" },
          "break",
          { label: "Item 4", intent: "item_4", kind: "action" }
        ],
        width: "16rem" %>
    </section>
  <% elsif @sandbox_component == "ig_note" %>
    <div class="sandbox-notes">
      <%= render "shared/ig_note",
        title: "description, image or a",
        content: "Write your sticky note content here.\nYou can pass any text into IGNote.",
        variant: "blue",
        mode: "expanded",
        width: "42rem",
        height: "18rem" %>

      <%= render "shared/ig_note",
        title: "collapsed",
        content: "This is hidden in collapsed mode.",
        variant: "yellow",
        mode: "collapsed",
        width: "42rem" %>
    </div>
  <% elsif @sandbox_component == "ig_shortcut" %>
    <section class="sandbox-desktop" aria-label="Desktop">
      <div class="sandbox-desktop__item" style="left: 70px; top: 90px;">
        <%= render "shared/ig_shortcut", thumbnail: "/icons/write.png", label: "New Scene 32", size: 32, isSelected: false %>
      </div>
      <div class="sandbox-desktop__item" style="left: 240px; top: 90px;">
        <%= render "shared/ig_shortcut", thumbnail: "/icons/write.png", label: "New Scene 64", size: 64, isSelected: false %>
      </div>
      <div class="sandbox-desktop__item" style="left: 450px; top: 70px;">
        <%= render "shared/ig_shortcut", thumbnail: "/icons/write.png", label: "New Scene 128", size: 128, isSelected: true %>
      </div>
      <div class="sandbox-desktop__item" style="left: 70px; top: 285px;">
        <%= render "shared/ig_shortcut", thumbnail: "/icons/sound.png", label: "Sound Cue 32", size: 32 %>
      </div>
      <div class="sandbox-desktop__item" style="left: 240px; top: 285px;">
        <%= render "shared/ig_shortcut", thumbnail: "/icons/sound.png", label: "Sound Cue 64", size: 64 %>
      </div>
      <div class="sandbox-desktop__item" style="left: 450px; top: 265px;">
        <%= render "shared/ig_shortcut", thumbnail: "/icons/sound.png", label: "Sound Cue 128", size: 128 %>
      </div>
    </section>
  <% elsif @sandbox_component == "ig_button" %>
    <section style="display: flex; flex-wrap: wrap; gap: 0.7rem; align-items: center;">
      <%= render "shared/ig_button", label: "Save Draft", width: "10rem", data: { intent: "save_draft", kind: "action" } %>
      <%= render "shared/ig_button", label: "Rename", variant: "subtle", width: "8.5rem" %>
      <%= render "shared/ig_button", label: "Delete", variant: "danger", width: "8.5rem" %>
      <%= render "shared/ig_button", label: "Locked", disabled: true, width: "8.5rem" %>
      <%= render "shared/ig_button", label: "Pressed", width: "8.5rem", pressed: true, data: { intent: "pressed_demo", kind: "toggle" } %>
    </section>
  <% else %>
    <h1 class="home__title">Insanely Great</h1>
  <% end %>
</main>
