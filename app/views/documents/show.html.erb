<main class="doc-editor-page">
  <section class="doc-editor-window" aria-label="Document editor">
    <header class="doc-editor-window__titlebar">
      <div class="doc-editor-window__traffic-lights" aria-hidden="true">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <p class="doc-editor-window__title"><%= @document.title %></p>
      <p class="doc-editor-window__meta">manuscriptOS</p>
    </header>

    <section class="doc-editor-canvas">
      <article class="doc-editor-paper">
        <h1 class="doc-editor-paper__title"><%= @document.title %></h1>
        <textarea class="doc-editor-paper__content" rows="18" readonly><%= @document.content %></textarea>
      </article>
    </section>
  </section>
</main>
