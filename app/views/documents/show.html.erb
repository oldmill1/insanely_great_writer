<main class="doc-terminal-page">
  <section class="doc-terminal-screen" aria-label="Document terminal">
    <p class="doc-terminal-path">manuscript://docs/<%= @document.id %></p>
    <h1 class="doc-terminal-title"><%= @document.title %></h1>
    <div class="doc-terminal-content" contenteditable="true"><%= @document.content %></div>
    <footer class="doc-terminal-bottom-bar" aria-label="Terminal status bar">
      <span>INSERT</span>
      <span>UTF-8</span>
      <span>Ln 1, Col 1</span>
    </footer>
  </section>
</main>
